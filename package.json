{
  "name": "hello-auth",
  "version": "1.0.0",
  "private": true,
  "description": "Minimal auth demo (login/logout) with Node+Express + React; deployable on Render",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "vite --port 5173",
    "build": "vite build",
    "start": "node server/index.js"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "express": "^5.2.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "vite": "^7.3.1"
  }
}
